<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zhang.zs.beijingnews.view.NoScrollerViewPager
        android:id="@+id/home_viewpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/Myrb"
            android:drawableTop="@drawable/rb_home_top_selecter"
            android:text="首页"

            />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/Myrb"
            android:drawableTop="@drawable/rb_news_top_selecter"
            android:text="新闻"

            />

        <RadioButton
            android:id="@+id/rb_smartservcie"
            style="@style/Myrb"
            android:drawableTop="@drawable/rb_smartservcie_top_selecter"
            android:text="智慧"

            />

        <RadioButton
            android:id="@+id/rb_govaffair"
            style="@style/Myrb"
            android:drawableTop="@drawable/rb_govaffair_top_selecter"
            android:text="政要"

            />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/Myrb"
            android:drawableTop="@drawable/rb_setting_top_selecter"
            android:text="设置"

            />

    </RadioGroup>
</LinearLayout>