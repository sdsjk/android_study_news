<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.senab.photoview.sample"
    android:versionCode="124"
    android:versionName="1.2.4" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="uk.co.senab.photoview.sample.LauncherActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uk.co.senab.photoview.sample.SimpleSampleActivity" />
        <activity android:name="uk.co.senab.photoview.sample.ViewPagerActivity" />
        <activity android:name="uk.co.senab.photoview.sample.RotationSampleActivity" />
        <activity android:name="uk.co.senab.photoview.sample.AUILSampleActivity" />
    </application>

</manifest>